<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout 
	android:layout_width="match_parent" 
	android:layout_height="match_parent" 
	android:background="#202020"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView android:id="@+id/BackToMenu" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/BackToMenu"
		android:textSize="40sp" android:layout_alignParentRight="true"
		android:layout_marginTop="10sp" android:layout_marginRight="10sp"
		android:clickable="true" android:onClick="showMenu" 
		android:textColor="#0000FF"/>

	<TextView android:id="@+id/Title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/Aquaponics"
		android:textSize="50sp" android:layout_marginTop="40sp"
		android:layout_below="@id/BackToMenu" android:layout_centerHorizontal="true" 
		android:layout_marginBottom="30dip"/>

<!--  Data for Water Temperature  -->
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/Title"
        android:layout_width="match_parent" 
        android:stretchColumns="1"
        android:background="@drawable/shape" 
        android:layout_height="wrap_content" 
        android:layout_margin="10dip" 
        android:layout_marginTop="30dip" android:id="@+id/DataLayout">

        <TableRow android:layout_marginTop="10dip">
            <TextView android:layout_height="wrap_content" 
                android:layout_width="wrap_content" android:text="@string/waterTemp" android:textSize="25sp"
                android:textStyle="bold" android:layout_column="1"
                android:id="@+id/tempLabel" android:layout_margin="10dip"/>
 
            <TextView 
                android:text="00" 
                android:layout_height="wrap_content" 
                android:layout_gravity="center"
                android:padding="4dip" 
                android:gravity="left" 
                android:layout_marginLeft="10dip" 
                android:textSize="20sp" android:id="@+id/tempDataValue" android:layout_margin="10dip" android:layout_marginRight="30dip"/>
        </TableRow>
        </TableLayout>

<TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:textSize="40sp" android:layout_marginTop="10dip"
        android:layout_below="@id/DataLayout" android:layout_centerHorizontal="true" 
        android:layout_marginBottom="10dip" android:id="@+id/Controls" android:text="@string/controls"/>

	<!--  Water Temperature  -->
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_below="@+id/Controls"
		android:layout_width="match_parent" 
		android:stretchColumns="1"
		android:background="@drawable/shape" 
		android:layout_height="wrap_content" 
		android:id="@+id/TempLayout" 
		android:layout_margin="10dip" 
		android:layout_marginTop="200dip">

		<TableRow android:layout_marginTop="10dip">
			<TextView android:layout_height="wrap_content" 
				android:layout_width="wrap_content" android:id="@+id/tempTextView"
				android:text="@string/waterTemp" android:textSize="25sp"
				android:textStyle="bold" android:layout_column="1"
				/>
		</TableRow>

		<TableRow>
			<TextView 
				
				android:layout_height="wrap_content" 
				android:layout_gravity="center"
				android:padding="4dip" 
				android:gravity="left" 
				android:layout_marginLeft="10dip" 
				android:id="@+id/tempValue" 
				android:textSize="20sp"/>
			<SeekBar
				android:padding="4dip" 
				android:layout_margin="10px" 
				android:layout_marginLeft="30dip" 
				android:layout_marginTop="30dip" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:layout_marginRight="10dip" 
				android:id="@+id/tempSeekbar"/>
		</TableRow>
		</TableLayout>
		
		<!--  PH Level  -->
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_marginTop="30dip" 
		android:layout_width="match_parent" 
		android:stretchColumns="1"
		android:background="@drawable/shape" 
		android:layout_height="wrap_content" 
		android:id="@+id/PhLayout" 
		android:layout_below="@+id/TempLayout"
		android:layout_margin="10dip">
		<TableRow android:layout_marginTop="10dip">
			<TextView 
				android:layout_height="wrap_content" 
				android:id="@+id/phTextView" 
				android:layout_width="wrap_content"
				android:textSize="25sp"
				android:textStyle="bold" 
				android:layout_column="1" android:text="@string/ph"/>
		</TableRow>
		<TableRow>
			<TextView 
				android:text="7" 
				android:layout_height="wrap_content" 
				android:id="@+id/phValue" 
				android:layout_gravity="center"
				android:padding="4dip" 
				android:gravity="left" 
				android:layout_marginLeft="10dip"
				android:textSize="20sp"/>
			<SeekBar 
				android:layout_height="wrap_content" 
				android:layout_width="match_parent" 
				android:id="@+id/phSeekBar"
				android:progress="7" 
				android:padding="4dip" 
				android:layout_margin="10px" 
				android:layout_marginLeft="30dip" 
				android:layout_marginTop="30dip" 
				android:max="1400" 
				android:layout_marginRight="10dip" />
		</TableRow>
		</TableLayout>
		
		<!--  Water Level -->
		<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_marginTop="30dip" 
		android:layout_width="match_parent" 
		android:stretchColumns="1"
		android:background="@drawable/shape" 
		android:layout_height="wrap_content" 
		android:id="@+id/LevelLayout" 
		android:layout_below="@+id/PhLayout"
		android:layout_margin="10dip">
		<TableRow android:layout_marginTop="10dip">
			<TextView 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:textSize="25sp"
				android:textStyle="bold" 
				android:layout_column="1" android:id="@+id/levelTextView" android:text="@string/waterLevel"/>
		</TableRow>
		<TableRow>
			<TextView 
				android:text="50" 
				android:layout_height="wrap_content" 
				android:layout_gravity="center"
				android:padding="4dip" 
				android:gravity="left" 
				android:layout_marginLeft="10dip"
				android:textSize="20sp" android:id="@+id/levelValue"/>
			<SeekBar 
				android:layout_height="wrap_content" 
				android:layout_width="match_parent" 
				android:progress="50" 
				android:padding="4dip" 
				android:layout_margin="10px" 
				android:layout_marginLeft="30dip" 
				android:layout_marginTop="30dip" 
				android:max="100" 
				android:layout_marginRight="10dip" 
				android:id="@+id/levelSeekBar"/>
		</TableRow>
		</TableLayout>
		
		<!-- Water Nutrients -->
		<TableLayout 
			xmlns:android="http://schemas.android.com/apk/res/android"
    		android:layout_marginTop="30dip" 
			android:layout_width="match_parent" 
			android:stretchColumns="1"
			android:background="@drawable/shape" 
			android:layout_height="wrap_content" 
			android:id="@+id/NutrientsLayout" 
			android:layout_below="@+id/LevelLayout"
			android:layout_margin="10dip">
		<TableRow android:layout_marginTop="10dip">
			<TextView 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content"
				android:textSize="25sp"
				android:textStyle="bold" 
				android:layout_column="1" android:id="@+id/nutrientsTextView" android:text="@string/waterNutrients"/>
		</TableRow>
		<TableRow>
			<TextView 
				android:text="50" 
				android:layout_height="wrap_content" 
				android:layout_gravity="center"
				android:padding="4dip" 
				android:gravity="left" 
				android:layout_marginLeft="10dip"
				android:textSize="20sp" android:id="@+id/nutrientsValue"/>
			<SeekBar 
				android:layout_height="wrap_content" 
				android:layout_width="match_parent" 
				android:progress="50" 
				android:padding="4dip" 
				android:layout_margin="10px" 
				android:layout_marginLeft="30dip" 
				android:layout_marginTop="30dip" 
				android:max="100" 
				android:layout_marginRight="10dip" android:id="@+id/nutrientsSeekBar"/>
		</TableRow>
		
		
	</TableLayout>


</RelativeLayout>


