<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@drawable/solar">
  
  <TextView  
	android:id="@+id/BackToMenu"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:text="@string/BackToMenu"
    android:textSize="40sp"
    android:textColor="#0000FF"
    android:layout_alignParentRight="true"
    android:layout_marginTop="10sp" 
    android:layout_marginRight="10sp"
    android:clickable="true"
    android:onClick="showMenu"    
    />
    
  <TextView
 	android:id="@+id/Title"
 	android:layout_width="wrap_content"
 	android:layout_height="wrap_content"
 	android:text="@string/Settings"
 	android:textSize="50sp"
 	android:layout_marginTop="40sp" 
 	android:layout_below="@id/BackToMenu"
 	android:layout_centerHorizontal="true"
 	/>
		
  <TextView 
    android:id = "@+id/ipTitle"
 	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:text="Change IP Address"
 	android:layout_marginTop="40sp" 
 	android:layout_below="@id/Title"
 	android:layout_centerHorizontal="true"
 	android:background="@drawable/shape"
	android:textSize="50sp" 
	/>

  <EditText 
	android:id="@+id/edit_ip"
	android:layout_width="fill_parent"
	android:layout_height="70sp"
	android:textSize="50sp"
 	android:layout_below="@id/ipTitle"
 	android:background="@drawable/inputbox"
 	android:layout_centerHorizontal="true" 
 	/>

  <Button 
	android:text="Change" 
	android:textSize="50sp"
	android:id="@+id/submit_button"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
 	android:layout_marginTop="20sp" 
 	android:layout_below="@id/edit_ip"
 	android:layout_centerHorizontal="true"
	android:onClick="changeIP" 
	/>
	
  <TextView 
    android:layout_width="fill_parent"
	android:id="@+id/confirmation_msg"
	android:layout_height="wrap_content" 
	android:text=""
	android:gravity="center_horizontal" 
	android:layout_marginTop="20dp"
	android:textSize="50sp" 
	android:layout_below="@id/submit_button"
	/>
	
</RelativeLayout>
